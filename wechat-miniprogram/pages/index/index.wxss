/**index.wxss**/
.survey-title {
  font-size: 18px;
  color: #2b2b2b;
}
.survey-introd {
  font-size: 12px;
  color: #4f4f4f;
}
.survey-qs-cell {
  margin: 15px 0px;
}
.survey-qs-cell text {
  margin: 10px 0px;
}
.survey-opt-cell {
  margin: 6px 0px;
  padding: 10px 15px;
  background-color: #f8f8f8;
  border: solid 1px #efefef;
  border-radius: 4px;
}
.survey-opt-cell radio {
  margin-right: 5px;
}

/* 按钮区域样式 */
.btn-area {
  margin: 25px 0px;
}
/* 日期选择器样式 */
.inputdate {
  width: 100%;
  height: 46px;
  line-height: 46px;
  border: solid 1px #efefef;
  border-radius: 4px;
  background-color: #f8f8f8;
  color: #4f4f4f;
}
.inputdate::before{
  content: url(data:image/png;base64,);
  vertical-align: middle;
  display: inline-block;
  width: 42px;
  height: 42px;
  padding: 3px 15px;
  box-sizing: border-box;
  margin-right: 5px;
}